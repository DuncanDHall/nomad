{
  "apps": {
    "layer4": {
      "servers": {



{{ range services }}
	{{ if  .Tags | join "," | regexMatch "urlprefix-" }}
		{{ if  .Tags | join "," | regexMatch "proto=tcp" }}
        "{{ .Name }}.{{ env "TCP_DOMAIN" }}": {
          "listen": [
            "{{ .Tags | join "," | regexReplaceAll "^urlprefix-" "" | regexReplaceAll "/$" "" | regexReplaceAll " proto=tcp" "" }}"
          ],
          "routes": [
            {
              "handle": [
                {
                  "handler": "proxy",
                  "proxy_protocol": "v2",
                  "upstreams": [
                    {
                      "dial": [
                        {{ $first := true }}
                        {{ range service .Name }}
                            {{ if $first }}
                                {{ $first = false }}
                            {{ else }}
                                ,
                            {{ end }}
                            "{{ .Address }}:{{.Port}}"
                        {{ end }}
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        },


		{{ end }}
	{{ end }}
{{ end }}

        "{{ env "FQDN" }}": {
          "listen": [ ":111" ],
          "routes": [{ "handle": [{ "handler": "echo" }]}]
        }
      }
    }
  }
}
