[Unit]
Description=consul-template
Requires=network-online.target
After=network-online.target consul.service

[Service]
Restart=on-failure
EnvironmentFile=-/etc/caddy/env
ExecStart=/usr/bin/consul-template -template "/etc/caddy/Caddyfile.ctmpl:/etc/caddy/Caddyfile:/bin/bash -c 'cd /etc/caddy; /usr/bin/caddy reload || true'"

[Install]
WantedBy=multi-user.target
